<% content_for :sidebar do %>
  <ul>
    <% AppDocs.apps_with_docs.each do |app| %>
    <li>
      <%= sidebar_link app.app_name, "/apps/#{app.app_name}.html" %>
      <ul>
        <% GitHubRepoFetcher.instance.docs(app.app_name).each do |page| %>
          <li><%= sidebar_link page[:title], page[:path] %></li>
        <% end %>
      </ul>
    </li>
    <% end %>
  </ul>
<% end %>

<% wrap_layout :core do %>
  <%= partial 'partials/header' %>
  <% if current_page.data.app_name # This conditional is for "/apis.html" %>
    <div>
      Last updated: <a href="https://github.com/alphagov/<%= current_page.data.app_name %>/commit/<%= current_page.data.latest_commit[:sha] %>"><%= current_page.data.latest_commit[:timestamp] %></a>
    </div>
  <% end %>
  <%= yield %>
<% end %>
